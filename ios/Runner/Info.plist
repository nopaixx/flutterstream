<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>LiveVaultHub</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>netflix_clone</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!--  LIVEVAULTHUB P2P CONFIGURATIONS -->

	<!-- Permitir contenido HTTP para streams -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSAllowsArbitraryLoadsInWebContent</key>
		<true/>
	</dict>

	<!-- Permisos de c谩mara y micr贸fono para WebRTC -->
	<key>NSCameraUsageDescription</key>
	<string>LiveVaultHub necesita acceso a la c谩mara para funciones de streaming avanzadas</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>LiveVaultHub necesita acceso al micr贸fono para audio en streams</string>

	<!-- Permisos de red local para P2P -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>LiveVaultHub usa la red local para optimizar el streaming P2P</string>

	<!-- Soporte para reproducci贸n en background -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
		<string>background-processing</string>
	</array>

	<!-- Configuraci贸n de WebView -->
	<key>io.flutter.embedded_views_preview</key>
	<true/>

	<!-- URL Schemes para deep links -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>livevaulthub.deep.link</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>livevaulthub</string>
				<string>https</string>
			</array>
		</dict>
	</array>

	<!-- Configuraci贸n de media playback -->
	<key>AVAudioSessionCategoryPlayback</key>
	<true/>

	<!-- Soporte para PiP (Picture in Picture) -->
	<key>AVPictureInPicturePlaybackRangeUserInterfaceEnabled</key>
	<true/>

	<!-- Optimizaciones de red para streaming -->
	<key>NSURLSessionConfiguration</key>
	<dict>
		<key>NSURLRequestCachePolicy</key>
		<integer>0</integer>
		<key>NSURLRequestNetworkServiceType</key>
		<integer>10</integer>
	</dict>
</dict>
</plist>